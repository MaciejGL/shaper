{
  "buildCommand": "npm run build",
  "functions": {
    "src/app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/checkin-notifications",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/meeting-reminders",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/trial-reminder",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/weekly-progress",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/winback-emails",
      "schedule": "0 10 * * *"
    }
  ],
  "build": {
    "env": {
      "GENERATE_SOURCEMAP": "false",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "github": {
    "autoJobCancelation": false
  }
}
